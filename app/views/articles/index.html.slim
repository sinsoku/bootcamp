- content_for :extra_body_classes, 'welcome'

section.o-static-page
  header.o-static-page-header
    .o-static-page-header__main
      nav.o-basic-breadcrumbs
        .l-container.is-mxw-100pc
          ol.o-basic-breadcrumbs__items
            li.o-basic-breadcrumbs__item
              = link_to "", class: "o-basic-breadcrumbs__item-link" do
                | Home
            li.o-basic-breadcrumbs__item
              = link_to "", class: "o-basic-breadcrumbs__item-link" do
                | お知らせ一覧
      .l-container
        .o-static-page-header__inner
          h1.o-static-page-header__title
            | お知らせ

  .o-static-page-body
    .l-container.is-xxl
      .o-static-page-body__inner
        .o-static-page-body__row
          .o-horizontal-articles
            .o-horizontal-articles__items
              .l-grids
                - @articles.each do |article|
                  .l-grids__item.md-up:u-col-4.sm-down:u-col-12
                    = render 'article', article: article

        .o-static-page-body__row
          = paginate @articles
          nav.o-pagination
            ul.o-pagination__items
              li.o-pagination__item.is-prev
                a.o-pagination__item-link.is-prev href="" rel="prev"
                  i.fbc-icon-angle-double-left
              li.o-pagination__item.is-start
                a.o-pagination__item-link.is-start href="/pages?page=5"
                  i.fbc-icon-angle-left
              li.o-pagination__item
                a.o-pagination__item-link href=""  1
              li.o-pagination__item
                a.o-pagination__item-link href=""  2
              li.o-pagination__item
                a.o-pagination__item-link.is-active href=""  3
              li.o-pagination__item
                a.o-pagination__item-link href=""  4
              li.o-pagination__item
                a.o-pagination__item-link href=""  5
              li.o-pagination__item.is-next
                a.o-pagination__item-link.is-next href=""
                  i.fbc-icon-angle-right
              li.o-pagination__item.is-last
                a.o-pagination__item-link.is-last href=""
                  i.fbc-icon-angle-double-right
